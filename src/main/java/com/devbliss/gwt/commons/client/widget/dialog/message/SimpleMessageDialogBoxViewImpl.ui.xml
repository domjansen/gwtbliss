<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:client.common.custompanels">


    <ui:with field='res'
        type='client.resources.CommonResources' />
    <ui:with field='text'
        type='client.resources.i18n.LocalMessages' />

    <g:DialogBox ui:field="mainDialogBox" styleName="{res.css.dialogBoxOuter}">
        <g:FormPanel>
            <g:FlowPanel styleName="{res.css.dialogBoxInner}">
                <c:CustomHTMLPanel tag="p" ui:field="customText" />
                <g:FlowPanel styleName="{res.css.floatRight} {res.css.dialogBoxFooter}">
                    <g:SubmitButton ui:field="okButton" text="{text.ok}" styleName="{res.css.buttonAdminConfirm}" />
                    <g:Anchor ui:field="cancelAnchor" text="{text.cancel}" visible="false" styleName="{res.css.buttonAdminCancel}" />
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FormPanel>
    </g:DialogBox>
</ui:UiBinder>